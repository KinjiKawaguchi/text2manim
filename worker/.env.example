# Server Settings
WORKER_PORT=50052  # ワーカーのポート番号

# Storage Settings
STORAGE_TYPE=local  # ストレージタイプ (local または gcp)
LOCAL_STORAGE_PATH=/tmp/text2manim  # ローカルストレージのパス

# GCP Storage Settings (GCPを使用する場合)
GCP_BUCKET_NAME=your-bucket-name  # GCPバケット名
GCP_CREDENTIALS_PATH=/path/to/your/service-account-key.json  # GCP認証情報のパス

# OpenAI Settings
USE_OPENAI=true  # OpenAI APIを使用するかどうか (true または false)
OPENAI_API_KEY=your-openai-api-key  # OpenAIのAPIキー
OPENAI_MODEL=gpt-4o  # 使用するOpenAIモデル

# Hugging Face Model Settings
HF_MODEL_NAME=your-username/your-model-name  # Hugging Faceモデル名
HF_TOKEN=your_huggingface_api_token  # Hugging Face APIトークン
HF_CACHE_DIR=/path/to/huggingface/cache  # Hugging Faceキャッシュディレクトリ

# Model Generation Settings
MODEL_NAME=your-username/your-model-name  # 使用するモデル名
MODEL_MAX_LENGTH=1000  # 生成するテキストの最大長
MODEL_TEMPERATURE=0.7  # 生成の温度 (0.0 - 1.0)
MODEL_TOP_K=50  # 生成時に考慮する上位K個のトークン
MODEL_TOP_P=0.95  # 生成時に考慮する累積確率の閾値

# Manim Settings
MANIM_QUALITY=medium_quality  # Manimの出力品質 (low_quality, medium_quality, high_quality)
MANIM_OUTPUT_FILE=scene.mp4  # 出力ファイル名

# Logging Settings
LOG_LEVEL=INFO  # ログレベル (INFO, DEBUG, WARNING, ERROR)
LOG_FILE=/path/to/log/file.log  # ログファイルのパス
